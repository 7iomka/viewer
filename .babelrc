{
  "presets": ["react", ["es2015", { "loose" : true }], "stage-0"],
  "plugins": [
    "lodash",
    "transform-decorators-legacy",

    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "node_modules": "./node_modules",
        "storybook": "./storybook"
      }
    }],

    ["transform-imports", {
      "react-router": {
        "transform": "react-router/lib/${member}",
        "preventFullImport": true
      }
    }]
  ],

  "env": {
    "production": {
      "presets": ["react-optimize"],
      "plugins": ["transform-runtime"]
    }
  }
}
